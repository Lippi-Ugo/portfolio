---
const {...projets} = Astro.props;
---

<article class="w-[731.5px] h-[166px] bg-[#111116] rounded-2xl p-6 flex items-center gap-6 border border-[#1f1f1f]">
  <img src={projets.image} alt={`${projets.nom} icon`} class="w-14 h-14 rounded-md bg-[#1b1b1b] p-2 object-contain"/>

  <div class="flex-1">
    <div class="flex items-start justify-between mb-3">
      <div>
        <h3 class="text-white text-lg font-semibold">{projets.nom}</h3>
        <div class="text-gray-400 text-sm mt-1 flex items-center gap-2">
          <span>{projets.nb_annee} ans</span>
          <span class="opacity-50">â€¢</span>
          <span>{projets.nb_projets} projets</span>
        </div>
      </div>
      <div class="text-orange-500 font-bold text-lg">{projets.pourcentage}%</div>
    </div>

    <div class="w-full bg-[#162028] rounded-full h-3 overflow-hidden">
      <div class="bg-orange-500 h-3 rounded-full" style={`width: ${projets.pourcentage}%`}></div>
    </div>
  </div>
</article>
