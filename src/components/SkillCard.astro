---
import ImgPb from '../components/ImgPb.astro';
const {...competences} = Astro.props;
---

<article class="lg:w-[731.5px] lg:h-[166px] bg-[#111116] rounded-2xl p-6 flex items-center gap-6 border border-[#1f1f1f]">
  <ImgPb
      record={competences}
      field="image"
      alt={competences.nom}
      classImg="object-cover w-20 h-20"
    />

  <div class="flex-1">
    <div class="mb-3">
      <h3 class="text-white text-lg font-semibold">{competences.nom}</h3>
      <div class="text-gray-400 text-sm mt-1 flex items-center gap-2">
        <span>{competences.nb_annee} ans</span>
        <span class="opacity-50">•</span>
        <span>{competences.nb_projets} projets</span>
      </div>
    </div>

    <div class="flex items-center justify-between mb-2">
      <div class="text-sm text-gray-400">Niveau de maîtrise</div>
      <div class="font-bold text-lg text-orange-500" style={`color: ${competences.couleur}`}>{competences.pourcentage}%</div>
    </div>

    <div class="w-full bg-[#162028] rounded-full h-3 overflow-hidden">
      <div class="h-3 rounded-full" style={`width: ${competences.pourcentage}%; background-color: ${competences.couleur}`}></div>
    </div>
  </div>
</article>
