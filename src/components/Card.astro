---
const {...projets} = Astro.props;
import ImgPb from "./ImgPb.astro";
---

<div class="w-[300px] h-[350px] rounded-[50px] shadow-md overflow-hidden bg-[#4A4848] lg:w-[400px] lg:h-[500px] relative">
  <!-- Image section -->
  <div class="flex justify-center items-center h-[188px] lg:h-[248px]">
    <ImgPb
      record={projets}
      field="image"
      alt={projets.nom}
      classPicture="col-start-1 row-start-1 w-full h-auto object-cover"
      classImg="object-cover w-full h-full"
    />
  </div>

  <!-- Content section -->
  <div class="p-6 flex flex-col justify-between h-[162px] lg:h-[252px]">
    <h3 class="text-white text-sm lg:text-lg font-semibold mb-2;">{projets.nom}</h3>
    <div class="relative inline-flex justify-center items-center gap-2 mb-2 bg-[#1F1F1F] rounded-[50px] w-[134px] h-[30px] lg:w-[136.43px] lg:h-[36.67px] lg:mb-6">
      <a href={`/projets/${projets.id}`} class="text-[#36C5F9] font-bold text-sm font-mono">Découvrez le →</a>
    </div>
  </div>
</div>