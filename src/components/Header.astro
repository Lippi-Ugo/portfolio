---
import FlecheCote from "../../public/fleche_cote.svg";
import FlecheBas from "../../public/fleche_bas.svg";
import AstroLogo from "../../public/astro.svg";
import Readme from "../../public/readme.svg";
import Gitignore from "../../public/gitignore.svg";
import Js from "../../public/js.svg";
---

<div
  id="header"
  class="bg-[#252526] text-white w-56 md:w-[300px] fixed top-14 bottom-0 left-14 md:left-[70px] shadow-md z-10"
>
  <header class="px-4 pt-5 pb-3 border-b border-[#333]">
    <h1 class="text-2xl font-semibold uppercase tracking-widest">
      EXPLORATEUR
    </h1>
  </header>

  <nav class="px-3 py-4 text-sm">
    <!-- Group title -->
    <div
      class="flex items-center justify-between px-2 py-1 text-xs uppercase font-semibold tracking-wide text-[#cfcfcf]"
    >
      <div class="flex items-center gap-2">
        <FlecheBas />
        <span class="text-lg">PORTFOLIO</span>
      </div>
    </div>

    <!-- File tree -->
    <ul class="mt-3 space-y-1 text-[#d0d0d0]">
      <li class="px-2 py-1 rounded-md hover:bg-[#2b2b2b]">
        <div class="flex items-center gap-2">
          <span class="w-4 h-4 inline-block"></span>
          <FlecheCote />
          <span class="font-medium">.astro</span>
        </div>
      </li>

      <li class="px-2 py-1 rounded-md">
        <div class="flex items-center gap-2">
          <span class="w-4 h-4 inline-block"></span>
          <FlecheBas />
          <span class="font-medium">src</span>
        </div>

        <!-- nested folder -->
        <ul class="mt-2 ml-4 space-y-1">
          <div class="flex items-center gap-2">
            <span class="w-4 h-4 inline-block"></span>
            <FlecheBas />
            <span class="font-medium">pages</span>
          </div>
          <ul class="ml-4 mt-2 space-y-1">
            <div class="flex items-center gap-2">
              <span class="w-4 h-4 inline-block"></span>
              <AstroLogo />
              <li
                class="px-2 py-1 rounded-md hover:bg-[#2b2b2b] text-[#bfc6cc]"
              >
                <a href="/">Accueil.astro</a>
              </li>
            </div>
            <div class="flex items-center gap-2">
              <span class="w-4 h-4 inline-block"></span>
              <AstroLogo />
              <li
                class="px-2 py-1 rounded-md hover:bg-[#2b2b2b] text-[#bfc6cc]"
              >
                <a href="/a-propos">A_propos.astro</a>
              </li>
            </div>
            <div class="flex items-center gap-2">
              <span class="w-4 h-4 inline-block"></span>
              <AstroLogo />
              <li
                class="px-2 py-1 rounded-md hover:bg-[#2b2b2b] text-[#bfc6cc]"
              >
                <a href="/projets">Projets.astro</a>
              </li>
            </div>
            <div class="flex items-center gap-2">
              <span class="w-4 h-4 inline-block"></span>
              <AstroLogo />
              <li
                class="px-2 py-1 rounded-md hover:bg-[#2b2b2b] text-[#bfc6cc]"
              >
                <a href="/contact">Contact.astro</a>
              </li>
            </div>
          </ul>
        </ul>
      </li>
      <li class="px-2 py-1 rounded-md hover:bg-[#2b2b2b]">
        <div class="flex items-center gap-2">
          <span class="w-4 h-4 inline-block"></span>
          <Gitignore />
          <span class="font-medium">.gitignore</span>
        </div>
      </li>
      <li class="px-2 py-1 rounded-md hover:bg-[#2b2b2b]">
        <div class="flex items-center gap-2">
          <span class="w-4 h-4 inline-block"></span>
          <Js />
          <span class="font-medium">package.json</span>
        </div>
      </li>
      <li class="px-2 py-1 rounded-md hover:bg-[#2b2b2b]">
        <div class="flex items-center gap-2">
          <span class="w-4 h-4 inline-block"></span>
          <Readme />
          <span class="font-medium">README</span>
        </div>
      </li>
    </ul>
  </nav>
</div>
